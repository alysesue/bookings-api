// This file is a copy of the original found in mol-lib-config, please make modifications there instead
// =============================================================================
// The settings in this file will overwrite default and user settings for a project.
// =============================================================================
{
	"[sql]": {
		"editor.formatOnSave": false
	},
	"[typescript]": {
		"editor.formatOnPaste": false,
		"editor.formatOnSave": false,
	},
	"[eslint]": {
		"editor.formatOnPaste": false,
		"editor.formatOnSave": false,
	},
	"auto-close-tag.activationOnLanguage": [
		"html",
		"javascriptreact",
		"typescriptreact"
	],
	// "editor.codeActionsOnSave": {
	// 	"source.fixAll.eslint": true
	// },
	"editor.detectIndentation": false,
	"editor.formatOnSave": true,
	"editor.insertSpaces": false,
	"files.associations": {
		"*.tsconfig.json": "jsonc",
		"*.tslint.json": "jsonc"
	},
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	"plantuml.diagramsRoot": "diagrams/src",
	"plantuml.exportFormat": "svg",
	"plantuml.exportOutDir": "diagrams/out",
	"search.useIgnoreFiles": true,
	"sequencediagrams.diagram.style": "simple",
	// "tslint.jsEnable": true,
	"typescript.tsdk": "./node_modules/typescript/lib",
	"typescriptHero.imports.multiLineWrapThreshold": 120,
	"typescriptHero.imports.stringQuoteStyle": "\"",
	"eslint.codeAction.showDocumentation": {

		"enable": true
	},
	"eslint.alwaysShowStatus": true,
	"files.autoSave": "onFocusChange"
}
