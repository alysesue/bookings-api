{
	"extends": "./node_modules/mol-lib-config/shared-config/tsconfig.json",
	"compileOnSave": true,
	"compilerOptions": {
		"strict": true,
		"strictNullChecks": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": "./",
		"module": "commonjs",
		"moduleResolution": "node",
		"noLib": false,
		"outDir": "./build",
		"removeComments": false,
		"sourceMap": true,
		"noUnusedLocals": true,
		"target": "es6",
		"typeRoots": [
			"node_modules/@types"
		],
		"paths": {
			"*": [
				"src/types/*"
			]
		}
	},
	"include": [
		"src"
	],
	"exclude": [
		"build",
		"jest",
		"node_modules",
		"scripts",
		"webpack",
		"types"
	],
	"filesGlob": [
		"./**/*.ts",
		"!./build/**/*.ts",
		"!./node_modules/**/*.ts"
	],
	"lib": [
		"es6"
	]
}
