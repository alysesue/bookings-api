{
	"name": "bookingsg-api",
	"version": "0.0.1",
	"main": "index.js",
	"scripts": {
		"lint": "tslint -p ./tsconfig.json -c ./tslint.json ./src/**/*.ts",
		"test": "npm run fixLF && ./node_modules/mol-lib-config/shared-scripts/jest-test-unit-integration.sh",
		"atest": "npm run fixLF && node ./node_modules/jest/bin/jest.js a --collect-coverage",
		"test:func": "npm run fixLF && ./node_modules/mol-lib-config/shared-scripts/jest-test-functional.sh",
		"test:func-local": "npm run fixLF && npm run test:func local",
		"build": "npm run fixLF && ./scripts/build.sh",
		"build:skip-migrations": "npm run fixLF && ./scripts/build.sh production skipMigrations",
		"swagger": "./node_modules/.bin/tsoa swagger --yaml",
		"sync-env": "npm run fixLF && export SERVICE_NAME=bookingsg-api && ./node_modules/mol-lib-config/shared-scripts/aws/aws-sm-sync-env.sh",
		"sync-local": "node node_modules/cpy-cli/cli ./params/secrets/local.env ./ --rename=.env",
		"start": "docker-compose up -d --build",
		"start:fresh": "docker-compose down -v && npm start -- --force-recreate",
		"cleanup": "docker-compose down -v --rmi all --remove-orphans",
		"cleanup:db": "docker-compose down && docker volume rm bookingsg-api_gt_dbdata",
		"logs": "docker logs -f bookingsg-api",
		"stop": "docker-compose stop",
		"lint-staged": "lint-staged",
		"watcher-install": "npm install",
		"watcher-build": "npm run build && npm run watcher-env",
		"watcher-env": "cp ./params/secrets/local.env ./dist/.env",
		"watcher-run": "(npm run watcher-env; cd ./dist; forever --minUptime 1000ms --spinSleepTime 3000ms -c \"node --trace-warnings --inspect=0.0.0.0:6000\" index.js)",
		"params:new": "npm run fixLF && ./node_modules/mol-bamboo-scripts/scripts/generator/service-params-new-env.sh",
		"fixLF": "node ./src/fixLF.js"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint --",
			"pre-push": "npm run build:skip-migrations && npm run atest && npm run swagger"
		}
	},
	"lint-staged": {
		"src/**/*.ts": [
			"npm run lint --"
		]
	},
	"watch": {
		"watcher-build": {
			"patterns": [
				"node_modules",
				"src"
			],
			"ignore": [
				"**/*.spec.ts",
				"src/routes.ts"
			],
			"extensions": "*",
			"delay": 1000,
			"verbose": true
		},
		"watcher-install": {
			"patterns": [
				"package.json",
				"package-lock.json"
			],
			"extensions": "*",
			"delay": 1000,
			"runOnChangeOnly": true,
			"verbose": true
		},
		"watcher-run": {
			"patterns": [
				"dist",
				"params"
			],
			"ignore": [
				"package.json",
				"package-lock.json"
			],
			"extensions": "*",
			"delay": 500,
			"runOnChangeOnly": true,
			"verbose": true
		},
		"watcher-env": {
			"patterns": [
				"params"
			],
			"extensions": "*",
			"delay": 100,
			"runOnChangeOnly": false,
			"verbose": true
		}
	},
	"dependencies": {
		"@koa/cors": "^2.2.3",
		"csv-parse": "^4.10.1",
		"glob": "^7.1.6",
		"googleapis": "^49.0.0",
		"koa-proxy": "^1.0.0-alpha.3",
		"mol-lib-api-contract": "git+https://mol-tech-support:MzM0MzQyNDg5NDMwOpTeYhhhv5A3YbEacxIksAUgeoLu@bitbucket.ship.gov.sg/scm/push/mol-lib-api-contract.git#semver:^4.6.5",
		"mol-lib-common": "git+https://mol-tech-support:MzM0MzQyNDg5NDMwOpTeYhhhv5A3YbEacxIksAUgeoLu@bitbucket.ship.gov.sg/scm/push/mol-lib-common.git#semver:^3.10.5",
		"moment": "^2.25.3",
		"pg": "^8.2.1",
		"reflect-metadata": "^0.1.13",
		"swagger2": "^2.0.0",
		"swagger2-koa": "^2.0.0",
		"typeorm": "^0.2.25",
		"typescript-ioc": "^3.2.1"
	},
	"devDependencies": {
		"@types/copy-webpack-plugin": "^5.0.0",
		"@types/faker": "^4.1.11",
		"@types/jest": "25.2.1",
		"@types/k6": "^0.25.1",
		"@types/lodash": "^4.14.150",
		"@types/minimist": "^1.2.0",
		"@types/node": "^13.13.10",
		"@types/webpack": "^4.41.12",
		"@types/webpack-node-externals": "^1.7.1",
		"chalk": "^4.0.0",
		"circular-dependency-plugin": "^5.2.0",
		"clean-webpack-plugin": "^3.0.0",
		"copy-webpack-plugin": "^5.1.1",
		"cpy-cli": "^3.1.1",
		"faker": "^4.1.0",
		"file-loader": "^6.0.0",
		"husky": "4.2.5",
		"jest": "^25.5.4",
		"jest-bamboo-formatter": "^1.0.1",
		"jest-cli": "^25.4.0",
		"lint-staged": "^10.1.7",
		"lodash": "^4.17.15",
		"minimist": "^1.2.5",
		"mol-bamboo-scripts": "git+https://mol-tech-support:MzM0MzQyNDg5NDMwOpTeYhhhv5A3YbEacxIksAUgeoLu@bitbucket.ship.gov.sg/scm/push/mol-bamboo-scripts.git#semver:^1.4.0",
		"mol-lib-config": "git+https://mol-tech-support:MzM0MzQyNDg5NDMwOpTeYhhhv5A3YbEacxIksAUgeoLu@bitbucket.ship.gov.sg/scm/push/mol-lib-config.git#semver:^4.0.2",
		"ts-jest": "^25.5.1",
		"ts-loader": "^7.0.2",
		"ts-node": "^8.9.1",
		"tsconfig-paths-webpack-plugin": "^3.2.0",
		"tslint": "^6.1.2",
		"tslint-config-security": "^1.16.0",
		"tslint-no-circular-imports": "^0.7.0",
		"tslint-sonarts": "^1.9.0",
		"typescript": "^3.8.3",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11",
		"webpack-node-externals": "^1.7.2",
		"webpack-synchronizable-shell-plugin": "^0.0.7",
		"webpack-watch-files-plugin": "^1.0.3"
	}
}
